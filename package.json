{
  "name": "huaweicloud-projectman-mcp",
  "version": "0.1.2",
  "description": "huaweicloud-projectman-mcp",
  "author": "zhensherlock",
  "type": "module",
  "license": "MIT",
  "bin": {
    "huaweicloud-projectman-mcp": "./build/index.js"
  },
  "files": [
    "build",
    "LICENSE",
    "README.md"
  ],
  "main": "build/index.js",
  "scripts": {
    "lint": "npx eslint \"src/**/*.{ts,js}\"",
    "build": "tsc --noEmit && cross-env NODE_ENV=production node scripts/build.js",
    "dev": "npm run dev:stdio",
    "dev:stdio": "cross-env NODE_ENV=local concurrently \"tsc --noEmit --watch\" \"node scripts/dev.js\"",
    "test": "vitest run",
    "report": "c8 report --reporter=lcov --reporter=html",
    "coverage": "rimraf coverage && npm run test && npm run report",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 -n changelog-option.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@huaweicloud/huaweicloud-sdk-projectman": "^3.1.174",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "dotenv": "^17.2.3",
    "uuid": "^8.3.2",
    "yargs": "^17.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.5",
    "c8": "^10.1.3",
    "compare-func": "^2.0.0",
    "concurrently": "^9.2.1",
    "conventional-changelog-angular": "^8.1.0",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tree-kill": "^1.2.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
